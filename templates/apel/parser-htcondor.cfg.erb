# Information about the apel client database
[db]
hostname = <%= @apel_mysql_hostname %>
port = <%= @apel_mysql_port %>
name = <%= @apel_mysql_database %>
username = <%= @apel_mysql_user %>
password = <%= @apel_mysql_password %>

[blah]
enabled = false

[batch]
enabled = true
type = HTCondor
parallel = <%= @parallel_jobs %>
dir = <%= @batch_dir %>
## typical logfile name is yyyymmdd e.g. 20120101
filename_prefix = <%= @batch_fileprefix %>
subdirs = false

[site_info]
# Specify the site name from GOCDB
site_name = <%= @site_name %>
# Batch system hostname.  This does not need to be a definitive hostname,
# but it should uniquely identify the batch system.
# Example: pbs.gridpp.rl.ac.uk
lrms_server = <%= @lrms_id %>


[logging]
logfile = /var/log/apelparser-htcondor.log
level = INFO
console = true


# Information about the apel client database
[db]
hostname = <%= scope['arc6::apel_mysql_hostname'] %>
port = <%= scope['arc6::apel_mysql_port'] %>
name = <%= scope['arc6::apel_mysql_database'] %>
username = <%= scope['arc6::apel_mysql_user'] %>
password = <%= scope['arc6::apel_mysql_password'] %>

[blah]
enabled = true
dir = <%= scope['arc6::apel::blah_dir'] %>
# typical logfile name is blahp.log-yyyymmdd, and prefix would be blahp.log
filename_prefix = <%= scope['arc6::apel_accounting_prefix'] %>
subdirs = false

[batch]
enabled = false

[site_info]
# Specify the site name from GOCDB
site_name = <%= scope['arc6::gocdb_sitename'] %>
# Batch system hostname.  This does not need to be a definitive hostname,
# but it should uniquely identify the batch system.
# Example: pbs.gridpp.rl.ac.uk
lrms_server = <%= scope['arc6::apel::lrms_id'] %>

[logging]
logfile = /var/log/apelparser-arc.log
level = INFO
console = true

